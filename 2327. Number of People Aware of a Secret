int PeopleAwareOfSecret(int n, int delay, int forget)
{
   var peopleKnowperDay = new int[n + 1];
   peopleKnowperDay[1] = 1;
   var sharers = 0;
   var mod = 1_000_000_007;

   for (int i = 2; i <= n; i++)
   {
      if (i - delay >= 1)
      {
         sharers = (sharers + peopleKnowperDay[i - delay]) % mod;
      }

      if (i - forget >= 1)
      {
         sharers = (sharers - peopleKnowperDay[i - forget] +mod) % mod;
      }
      
      peopleKnowperDay[i] = sharers;
   }
   
   var start = n - forget + 1;
   var result = 0;
   for (int i = start; i <= n; i++)
   {
      result = (result + peopleKnowperDay[i]) % mod;
   }
   
   return result;
}

Console.WriteLine(PeopleAwareOfSecret(289, 7, 23));